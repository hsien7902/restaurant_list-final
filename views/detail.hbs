{{!-- showpage here --}}
<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container mb-3">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.location}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          本店特色：
        </span>
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
    <div class="text-center">
      <a href="./{{ restaurant._id }}/edit" class="btn btn-secondary">edit</a>
      <a href="/" class="btn btn-success">Back</a>
      <form action="/restaurants/{{ restaurant._id }}/delete" method="POST" style="display: inline;">
        <button class="btn btn-danger" type="submit">delete</button>
      </form>
    </div>
  </div>
</div>