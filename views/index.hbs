{{!-- indexpage here --}}
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <div class="text-end mt-2">
        <a href="./restaurants/new"><button class="btn btn-primary">新增餐廳</button></a>
      </div>
    </div>
  </div>
  <!-- restaurant list -->

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <!-- render list here -->
        <div class="card-columns">
          {{#each restaurant}}
          <div class="card mb-1">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h5 class="card-title mb-1">{{this.name}}</h5>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>
                <h6>{{this.category}}</h6>
              </div>
              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="card-footer text-end ">
              <a href="./restaurants/{{ this._id }}" class="btn btn-secondary">detail</a>
              <a href="./restaurants/{{ this._id }}/edit" class="btn btn-success ">edit</a>
              <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger">delete</button>
              </form>
            </div>
          </div>
          {{/each}}
        </div>


      </div>
    </div>
  </div>